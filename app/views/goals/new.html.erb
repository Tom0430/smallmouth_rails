<%= form_for @goal do |f| %>

<%= f.label :"新しい目標" %>
<%= f.text_field :title %>
<hr>
<%= f.label :"目標を具体的にいうと？" %>
<%= f.text_area :detail %>
<hr>


<%= f.select :limit_time, [['30秒後',"limit30s"], ['６時間後', "limit6h" ], ['１日後まで',"limit1d" ], ['3日後まで',"limit3d" ], ['7日後まで',"limit7d" ], ['5秒後まで',"limit5s" ], ['１分後まで',"limit1m" ]],
{include_blank: '期限はいつまで？'}, class: 'limit_box' %>

<%= f.submit "絶対にやり遂げよう！" %>
<% end %>
